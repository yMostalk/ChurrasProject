<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true">

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".TelaPrincipal">

    <View
        android:id="@+id/containerComponents"
        style="@style/ContainerComponents4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_notifications"
        android:layout_marginLeft="320dp"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintTop_toTopOf="@id/containerComponents"
        />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:src="@drawable/logowhite"
        android:layout_marginRight="320dp"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintTop_toTopOf="@id/containerComponents"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonMC"
        style="@style/ButtonMC"
        android:layout_marginTop="30dp"
        android:text="Meu Churrasco"
        app:layout_constraintTop_toBottomOf="@id/containerComponents"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonEC"
        style="@style/ButtonEC"
        android:layout_marginTop="20dp"
        android:text="Encontrar Churrasco"
        app:layout_constraintTop_toBottomOf="@id/buttonMC"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonCC"
        style="@style/ButtonCC"
        android:layout_marginTop="20dp"
        android:text="Criar Churras"
        app:layout_constraintTop_toBottomOf="@id/buttonMC"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonAV"
        style="@style/ButtonAV"
        android:layout_marginTop="20dp"
        android:text="Avaliações"
        app:layout_constraintTop_toBottomOf="@id/buttonEC"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonAL"
        style="@style/ButtonCC"
        android:text="Suporte"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/buttonCC"
        app:layout_constraintStart_toStartOf="parent"
        />


    <ImageView
        android:id="@+id/BotaoUsuario"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_person"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/buttonAV"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/BotaoChat"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_chat"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toBottomOf="@id/buttonAV"
        app:layout_constraintStart_toStartOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>